{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 4,
  "singleQuote": true,
  "printWidth": 120,
  "trailingComma": "es5",
  "phpVersion": "8.2",
  "overrides": [
    {
      "files": "*.{js,vue,css,json}",
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss", "@prettier/plugin-php"]
}
